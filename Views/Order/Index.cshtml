@model System.Collections.Generic.List<FPTBook.Models.Order>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<table class="table">
    <thead>
    <tr>
        <th>
            OrderId
        </th>
        <th>
            Total Price
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            @*<td>
                @Html.ActionLink("Detail", "Detail", "Order", new
                          { orderId = item.Id,
                              userId = item.UserId,
                          }, null)
            </td>*@
        </tr>
    }
    </tbody>
</table>
