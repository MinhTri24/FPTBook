@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="btn ms-auto pe-2 ms-2 ps-2 pt-2 pb-2 me-0" role="button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name</a>
    <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        
    </form>
}
else
{
    <a class="btn ms-auto pe-2 ms-2 ps-2 pt-2 pb-2 me-0" role="button" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
    <a class="btn btn-dark ps-1 pe-1 mt-2 mb-2 me-2 ms-2 pt-2 pb-2" role="button" style="margin-right: 4px" asp-area="Identity" asp-page="/Account/Register">REGISTER&nbsp;</a>
    
}
