@model List<Book>
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@inject UserManager<ApplicationUser> _userManager;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Book</h1>

<button type="button" class="btn btn-info">
    <a class="text-primary m-0 font-weight-bold" asp-controller="Book" asp-action="Create">Create</a>
</button>

@foreach (var item in Model)
{
    var userId = _userManager.GetUserId(User);
    <div class="card" style="width: 18rem;">
        <img src="@item.Image" class="card-img-top" alt="Book">
        <div class="card-body">
            <h5 class="card-title">@item.Title</h5>
            <h6 class="card-title">@item.Author</h6>
            <h7 class="card-title">@item.CategoryId</h7>
            <p class="card-text">@item.Summary</p>
            <h8 class="card-title">@item.Price</h8>
            <a class="btn btn-primary" asp-controller="Book" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
            @Html.ActionLink("Add to Cart", "Create", "OrderedBook", new
            {
                bookId = item.Id,
                userId
            })
        </div>
    </div>
}